html
    head
        title User Manager
    body
        h1 Edit User
        form(id="myForm", method="post", action=`/edit/${userId}`)
            input(type="text", id="username", name="username", value=`${usernameField}`, required)
            br
            input(type="text", id="name", name="name", value=`${nameField}`, required)
            br
            input(type="email", id="email", name="email", value=`${emailField}`, required)
            br
            input(type="number", id="age", name="age", value=`${ageField}`, required)
            br
            input(type="submit", value="Save User")
